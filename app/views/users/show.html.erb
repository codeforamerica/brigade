<header class="page-id">
  <h1>
    People | <span class="amp"><%= @user.full_name %></span>
  </h1>
</header>

<div id="leftcolumn" class='span7'>
  <h2>
    User Info 
    <% if can? :edit, @user %>
      <%= link_to '(Edit)', edit_user_path(@user) %>
    <% end %>
  </h2>

    <div id="user_info" class='row'>
      <div class='span2'>
        <%= @user.gravatar_medium %>
      </div>

      <table class="user-info" cellpadding="4">
        <tr>
          <td class="prv-label">Name</td>
          <td><%= @user.full_name %></td>
        </tr>
        <tr>
          <td class="prv-label">Contact</td>
          <td><%= @user.contact_preference %></td>
        </tr>
        <tr>
          <td class="prv-label">Location</td>
          <td><%= @user.location_name %></td>
        </tr>
        <tr>
          <td class="prv-label">Skills</td>
          <td><%= @user.skill_set %></td>
        </tr>
        <% if @user.brigades.any? %>
        <tr>
          <td class="prv-label">Brigades</td>
          <td><%= raw @user.brigades.map{|b| link_to b.name, brigade_url(b)}.join(', ') %></td>
        </tr>
        <% end %>
      </table>

