<header class="page-id">
  <h1><%= @location.name %></h1>
</header>

<div class="container-fluid">
  <div class="row-fluid">
    <!-- main -->
    <div id="leftcolumn" class="span8">

      <table class="all-cities" cellpadding="4" id="sortable">
        <thead>
          <tr>
            <th>App Name</th>
            <th width="17%">Status</th>
            <th>Location</th>
            <th>Action</th>
          </tr>
        </thead>

        <%= render @location.deployed_applications, brigade_name: false %>
      </table>
    </div>

    <div id="sidebar" class="span4">
      <div class="app-info">
        <h3>Info</h3>
        <h4><span class='icon'>Y</span> Get involved</h4>
        <p class='center'>
        </p>

        <h4><span class='icon'>f</span> Members</h4>
        <%= @location.decorated_members %>
      </div>
    </div>
  </div>
</div>

