<header id="top-deck">
  <div class="content">
    <a href="/" class="logo"></a>
    <nav class="primary">
      <ul id="site-sections">
        <li data-desc="What we do" class="<%= 'active' if current_page?(page_path('activities')) %>">
          <%= link_to 'Activities', '/activities' %>
        </li>
        <li data-desc="Where and how to find us" class="<%= 'active' if current_page?(page_path('connect')) %>">
          <%= link_to 'Connections', '/connect' %>
        </li>
        <li data-desc="Calendar and Meetups" class="<%= 'active' if current_page?(page_path('events')) %>">
          <%= link_to 'Events', '/events' %>
